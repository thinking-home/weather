{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "ThinkingHome.Weather.Api",
          "files": [
            "ThinkingHome.Weather.Api.csproj"
          ]
        }
      ],
      "dest": "_api",
      "namespaceLayout": "nested",
      "enumSortOrder": "declaringOrder",
      "disableGitFeatures": true,
      "filter":"filterConfig.yml" 
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "Thinking-Home-Weather",
      "_appTitle": "Thinking-Home-Weather",
      "_enableSearch": true,
      "pdf": false
    }
  }
}